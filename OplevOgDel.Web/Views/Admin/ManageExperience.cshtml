@model OplevOgDel.Web.Models.ViewModel.ManageExperienceViewModel

@{
    ViewData["Title"] = "Rapport";
}

<h1>Oversigt for @Model.Name</h1>

<div>
    <h3>Navn</h3>
    <p>@Model.Name</p>
    <h3>Beskrivelse</h3>
    <p>@Model.Description</p>
    <h3>Kategori</h3>
    <p>@Model.Category.Name</p>
    <h3>By</h3>
    <p>@Model.City</p>
    <h3>Adresse</h3>
    <p>@Model.Address</p>
</div>

<div>
    <button class="btn btn-outline-success">Godkend oplevelse</button>
    <a class="btn btn-outline-warning" asp-action="EditExperience" asp-route-id="@Model.Id">Ændre oplevelse</a>
    <button class="btn btn-outline-danger">Fjern oplevelse</button>
</div>

<h2>Rapporter for oplevelsen</h2>
<table class="table">
    <thead>
        <tr>
            <th>Bruger</th>
            <th>Rapport beskrivelse</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExperienceReports)
        {
            <tr>
                <td>
                    @item.Creator.FirstName @item.Creator.LastName
                </td>
                <td>
                    @item.Description
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Anmeldelser for oplevelsen med rapporter</h2>
@foreach (var review in Model.Reviews)
{
    @if (review.ReviewReports.Count != 0)
    {
        <h4>Anmeldelses beskrivelse</h4>
        <p>@review.Description</p>
        <div>
            <button class="btn btn-outline-success">Godkend anmeldelse</button>
            <button class="btn btn-outline-danger">Fjern anmeldelse</button>
        </div>
        <h5>Rapporter for anmeldelsen</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Bruger</th>
                    <th>Rapport beskrivelse</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rapport in review.ReviewReports)
                {
                    <tr>
                        <td>
                            @rapport.Creator.FirstName @rapport.Creator.LastName
                        </td>
                        <td>
                            @rapport.Description
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}