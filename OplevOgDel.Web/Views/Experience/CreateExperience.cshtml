@model OplevOgDel.Web.Models.ViewModel.CreateOneExperienceViewModel

@{
    ViewData["Title"] = "Opret Oplevelse";
}

<h1>Opret Oplevelse</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateExperience" asp-controller="Experience">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Experience.Name" class="control-label"></label>
                <input asp-for="Experience.Name" class="form-control" />
                <span asp-validation-for="Experience.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience.Description" class="control-label"></label>
                <input asp-for="Experience.Description" class="form-control" />
                <span asp-validation-for="Experience.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience.Address" class="control-label"></label>
                <input asp-for="Experience.Address" class="form-control" />
                <span asp-validation-for="Experience.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience.City" class="control-label"></label>
                <input asp-for="Experience.City" class="form-control" />
                <span asp-validation-for="Experience.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kategori</label>
                <select class="form-control" asp-for="Experience.Category" asp-items="Model.Categories"></select>
                <span asp-validation-for="Experience.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

