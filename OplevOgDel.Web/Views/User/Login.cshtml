@model OplevOgDel.Web.Models.Dto.UserDto

@{
    ViewData["Title"] = "Log ind";
}

<h1>Log ind</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Brugernavn</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kodeord</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log ind" class="btn btn-primary" />
                <a class="btn btn-outline-primary"asp-action="Register">Opret bruger</a>
                <a asp-controller="Home" asp-action="Index">Annullér</a>
            </div>
            <p class="text-danger">@ViewBag.Message</p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
