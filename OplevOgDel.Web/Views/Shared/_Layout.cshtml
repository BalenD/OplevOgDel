	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap" rel="stylesheet">
</head>
<body>
	<nav class="navbar navbar-expand-lg">
		<a href="#" class="logo"><img src="~/images/logo.png" /></a>
		<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
			<span class="navbar-toggler-icon"></span>
		</button>
		<!-- Collection of nav links, forms, and other content for toggling -->
		<div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
			<form class="navbar-form form-inline">
				<div class="input-group search-box">
					<input type="text" id="search" class="form-control" placeholder="Søg på oplevelse...">
					<div class="input-group-append">
						<span class="input-group-text"><i class="fal fa-search"></i></span>
					</div>
				</div>
			</form>




			<div class="select-box">
				<div class="select-box__current" tabindex="1">
					@if (Model.Experiences.Count != 0)
                    {
                        var count = 0;
                        var countVal = 1;

						@foreach (var experience in Model.Experiences.GroupBy(x => x.City).Select(y => y.First()).ToList())
						{
							@if (count == 0)
							{
							<div class="select-box__value">
								<input class="select-box__input" type="radio" id="@count" value="@countVal" name="location" checked="checked" />
								<p class="select-box__input-text">@experience.City</p>
							</div>
							}
							else
							{
							<div class="select-box__value">
								<input class="select-box__input" type="radio" id="@count" value="@countVal" name="location" />
								<p class="select-box__input-text">@experience.City</p>
							</div>
							}
							
							count++;
							countVal++;
						}
					}
					
					<img class="select-box__icon" src="http://cdn.onlinewebfonts.com/svg/img_295694.svg" alt="Arrow Icon" aria-hidden="true" />
				</div>
                <ul class="select-box__list">

                    @if (Model.Experiences.Count != 0)
                    {
                        var countFor = 0;

						@foreach (var experience in Model.Experiences.GroupBy(x => x.City).Select(y => y.First()).ToList())
						{
							<li>
								<label class="select-box__option" for="@countFor" aria-hidden="aria-hidden">@experience.City</label>
							</li>

                            countFor++;

                        }
					}


                </ul>
			</div>






			<a href="#" class="btn btn-primary">Søg</a>
			<div class="navbar-nav">
				<label>
					<input type="checkbox">
					<span class="red"><i class="fal fa-utensils"></i></span>
				</label>
				<label>
					<input type="checkbox">
					<span class="green"><i class="fal fa-tree-alt"></i></span>
				</label>
				<label>
					<input type="checkbox">
					<span class="purple"><i class="fal fa-guitar"></i></span>
				</label>
				<label>
					<input type="checkbox">
					<span class="orange"><i class="fal fa-running"></i></span>
				</label>
				<label>
					<input type="checkbox">
					<span class="blue"><i class="fal fa-globe-europe"></i></span>
				</label>
				<label>
					<input type="checkbox">
					<span class="brown"><i class="fal fa-landmark"></i></span>
				</label>
			</div>
			<div class="navbar-nav action-buttons ml-auto">
				<a href="#" class="nav-item nav-link">Log ind</a>
				<a href="#" class="btn btn-primary">Tilmeld</a>
			</div>
		</div>
	</nav>

	<div class="container">@RenderBody()</div>

















